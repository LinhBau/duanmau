<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragment.DoanhThuFragment"
    android:background="@drawable/custom_background">

    <Button
        android:id="@+id/btn_tu_ngay"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="#ccc"
        android:text="Từ ngày"
        android:textColor="#000"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_den_ngay"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_tu_ngay"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="#ccc"
        android:text="Đến ngày"
        android:textColor="#000"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_tu_ngay" />

    <EditText
        android:id="@+id/ed_tu_ngay"
        android:layout_width="210dp"
        android:layout_height="45dp"
        android:layout_marginTop="16dp"
        android:hint="Từ ngày"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.542"
        app:layout_constraintStart_toEndOf="@+id/btn_tu_ngay"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/ed_den_ngay"
        android:layout_width="210dp"
        android:layout_height="45dp"
        android:layout_marginTop="16dp"
        android:layout_toRightOf="@id/btn_den_ngay"
        android:hint="Đến ngày"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btn_den_ngay"
        app:layout_constraintTop_toBottomOf="@+id/ed_tu_ngay" />

    <Button
        android:id="@+id/btn_doanh_thu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="156dp"
        android:layout_marginTop="32dp"
        android:text="SUM"
        android:textColor="#000"
        android:backgroundTint="#ccc"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ed_den_ngay" />

    <TextView
        android:id="@+id/tv_doanh_thu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="16dp"
        android:text="Doanh thu:"
        android:textColor="#ff00"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_doanh_thu" />

</androidx.constraintlayout.widget.ConstraintLayout>