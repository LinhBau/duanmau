<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="8dp"
    android:layout_margin="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="8dp">

        <TextView
            android:id="@+id/tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mã thành viên: "
            android:textSize="18sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_ma_thanh_vien"
            android:text="1"
            android:textSize="18sp"
            android:layout_toRightOf="@id/tv1"
            android:layout_toLeftOf="@id/img_del_thanh_vien"
            android:paddingLeft="8dp"/>

        <TextView
            android:id="@+id/tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv1"
            android:text="Tên thành viên: "
            android:textColor="#000"
            android:textSize="20sp" />

        <TextView
            android:textColor="#000"
            android:id="@+id/tv_ten_thanh_vien"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_ma_thanh_vien"
            android:layout_toLeftOf="@id/img_del_thanh_vien"
            android:layout_toRightOf="@id/tv2"
            android:text="IT"
            android:textSize="20sp"
            android:paddingLeft="8dp"/>

        <TextView
            android:textColor="#000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Năm sinh: "
            android:id="@+id/tv3"
            android:textSize="18sp"
            android:layout_below="@id/tv2"/>

        <TextView
            android:textColor="#000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_nam_sinh_thanh_vien"
            android:text="2003"
            android:textSize="18sp"
            android:layout_toRightOf="@id/tv3"
            android:layout_toLeftOf="@id/img_del_thanh_vien"
            android:paddingLeft="8dp"
            android:layout_below="@id/tv2"/>

        <ImageView
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:id="@+id/img_del_thanh_vien"
            android:src="@drawable/ic_baseline_delete_forever_24"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
</androidx.cardview.widget.CardView>