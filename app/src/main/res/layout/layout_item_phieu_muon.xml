<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="5dp"
    android:layout_margin="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mã phiếu: "
            android:id="@+id/tv1"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/tvMaPm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/imgDeletePM"
            android:layout_toRightOf="@id/tv1"
            android:paddingLeft="8dp"
            android:text="1"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv1"
            android:text="Thành viên: "
            android:textColor="#000"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tvTenTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvMaPm"
            android:layout_toLeftOf="@id/imgDeletePM"
            android:layout_toRightOf="@id/tv2"

            android:text="Zed Champion"
            android:textColor="#000"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/imgDeletePM"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_baseline_delete_forever_24" />

        <TextView
            android:textColor="#000"
            android:id="@+id/tv3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvTenTV"
            android:text="Tên sách: "
            android:textSize="21sp" />

        <TextView
            android:id="@+id/tvTenSach"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvTenTV"
            android:layout_toLeftOf="@id/tvTraSach"
            android:layout_toRightOf="@id/tv3"
            android:text="Combo Zed"
            android:textColor="#000"
            android:textSize="21sp" />

        <TextView
            android:id="@+id/tvTraSach"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvTenTV"
            android:layout_toLeftOf="@id/imgDeletePM"
            android:paddingLeft="15dp"
            android:paddingRight="25dp"
            android:text="Trả sách"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/tv4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv3"
            android:text="Tiền thuê: "
            android:textSize="16sp"
            android:layout_marginTop="5dp"/>

        <TextView
            android:id="@+id/tvTienThue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv3"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/tv4"
            android:paddingLeft="8dp"
            android:text="100000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvNgayPM"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvTenSach"
            android:layout_marginTop="5dp"
            android:layout_toLeftOf="@id/imgDeletePM"
            android:text="Ngay thue: 20/10/2003"
            android:textSize="16sp" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>